@page "/blog/create"

<h3>Create Blogs</h3>

<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label for="Name" class="control-label">@nameof(CreateBlogVM.Title)</label>
            <input for="Title" class="form-control" @bind="@BlgVM.Title" />

            <label for="Desc" class="control-label">@nameof(CreateBlogVM.Description)</label>
            <input for="Description" class="form-control" @bind="@BlgVM.Description" />
        </div>

        <div class="form-group mt-2">
            <label for="Name" class="control-label">Category</label>
            <select class="form-select" aria-label="Select category" @bind="@SelectedCategories" multiple>
                @foreach (var category in categories)
                {
                    <option value="@category.CategoryId">@category.Title</option>
                }
            </select>
        </div>

        <div class="form-group mt-2">
            <label for="Name" class="control-label">Photo</label>
            <select class="form-select" aria-label="Select photo" @bind="@SelectedPhotos" multiple>
                @foreach (var photo in photos)
                {
                        <option value="@photo.PhotoId">@photo.Title</option>
                }
            </select>
        </div>

        <div class="form-group mt-2">
            <input type="button" value="Create" @onclick="@CreateBlg" class="btn btn-primary" />
            <input type="button" value="Cancel" @onclick="@Cancel" class="btn btn-light" />
        </div>
    </div>
</div>
