@page "/category/update/{CategoryId}"
<h3>Update Category</h3>

<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label for="CategoryName" class="control-label">CategoryName</label>
            <input for="Title" class="form-control" @bind="@model.Title" />
        </div>
        <div class="form-group mt-2">
            <input type="button" value="Update" @onclick="@UpdateCat" class="btn btn-primary" />
            <input type="button" value="Cancel" @onclick="@Cancel" class="btn btn-light" />
        </div>
    </div>
</div>
