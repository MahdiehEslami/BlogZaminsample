@page "/photo/Create"

<h3>CreatePhoto</h3>
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label for="PhotoName" class="control-label">PhotoName</label>
            <input for="Title" class="form-control" @bind="@imgVM.Title"/>

            <label for="PhotoUrl" class="control-label">PhotoURL</label>
            <input for="ImageUrl" class="form-control" @bind="@imgVM.ImageUrl" />
        </div>
        <div class="form-group mt-2">
            <input type="button" value="Create" @onclick="@Createimg" class="btn btn-primary" />
            <input type="button" value="Cancel" @onclick="@Cancel" class="btn btn-light" />
        </div>
    </div>
 </div>