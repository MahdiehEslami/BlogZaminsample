@page "/photo/update/{PhotoId}"
<h3>Update Photo</h3>

<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label for="PhotoName" class="control-label">PhotoName</label>
            <input for="Title" class="form-control" @bind="@model.Title" />

            <label for="PhotoUrl" class="control-label">PhotoURL</label>
            <input for="ImageUrl" class="form-control" @bind="@model.ImageUrl" />
        </div>
        <div class="form-group mt-2">
            <input type="button" value="Update" @onclick="@Updateimg" class="btn btn-primary" />
            <input type="button" value="Cancel" @onclick="@Cancel" class="btn btn-light" />
        </div>
    </div>
</div>
